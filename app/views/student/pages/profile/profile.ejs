<%- include('../../layout/header'); %>


<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Profile Details</h4>
        <div class="row align-items-center mb-3">
            <div class="col-2">
                <strong>Full Name:</strong>
            </div>
            <div class="col-10">
                <input type="text" class="form-control" value="<%= user.full_name %>" readonly />
            </div>
        </div>

        <div class="row align-items-center mb-3">
            <div class="col-2">
                <strong>Email:</strong>
            </div>
            <div class="col-10">
                <input type="text" class="form-control" value="<%= user.email %>" readonly />
            </div>
        </div>

        <div class="row align-items-center mb-3">
            <div class="col-2">
                <strong>Change Password</strong>
            </div>
            <div class="col-10">
                <form class="d-flex" id="update_pass_form">
                    <input type="text" class="form-control me-3" name="password" placeholder="Create New Password" />
                    <button type="submit" class="btn btn-success">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('../../layout/footer'); %>
<script src="/assets/student/js/script.js"></script>
<script src="/student/pages/profile/profile.js"></script>