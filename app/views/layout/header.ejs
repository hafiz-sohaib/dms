<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="icon" href="/assets/img/favicon.ico" />
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/quill.snow.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
</head>
<body>

    <input type="hidden" id="user_id" value="<%= user._id %>" />

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="success_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <rect width="100%" height="100%" fill="#00695c"></rect>
                </svg>
                <strong class="me-auto" id="toast_title">Message</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toast_body"></div>
        </div>
    </div>


    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <% if (user.role.includes("admin")) { %>
                        <%- include('../components/admin/sidebar') %>
                    <% }else if (user.role.includes("teacher")) { %>
                        <%- include('../components/teacher/sidebar') %>
                    <% }else if (user.role.includes("student")) { %>
                        <%- include('../components/student/sidebar') %>
                    <% } %>
                </div>
                <div class="col-lg-9">
                    <section class="main-content">

                        <span class="badge navigation-badge">
                            <% if (user.role.includes("admin")) { %>
                                Admin
                            <% }else if (user.role.includes("teacher")) { %>
                                Teacher
                            <% }else if (user.role.includes("student")) { %>
                                Student
                            <% } %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                            <%= path.slice(1).replace('-',' ').replace('-',' ') %>
                        </span>