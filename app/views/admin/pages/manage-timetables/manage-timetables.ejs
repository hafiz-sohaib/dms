<%- include('../../layout/header') %>


<div class="card bg-light mb-5 shadow-sm">
    <div class="card-body">
        <form id="timetable_form">
            <h5 class="mb-4">Upload Timetable</h5>
            <div class="row mb-3">
                <div class="col-4">
                    <select class="form-select" name="student_year">
                        <option value="2019">2019</option>
                    </select>
                    <div class="text-danger" id="student_year_error"></div>
                </div>
                <div class="col-4">
                    <select class="form-select" name="student_section">
                        <option value="sectiion-1">Section 1</option>
                    </select>
                    <div class="text-danger" id="student_section_error"></div>
                </div>
                <div class="col-4">
                    <input type="file" name="timetable" class="form-control" required />
                    <div class="text-danger" id="timetable_error"></div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Upload Timetable</button>
        </form>
    </div>
</div>


<div class="card bg-light shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Timetable</h5>
            <div class="row" style="width: 390px;">
                <div class="col-8 ps-0">
                    <input type="text" id="search_timetable" class="form-control" placeholder="Search timetable via name..." style="width: 250px;" />
                </div>
                <div class="col-4 ps-0">
                    <select id="reorder_timetable" class="form-select">
                        <option selected disabled>Order By</option>
                        <option value="asc">A-Z</option>
                        <option value="desc">Z-A</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Student Batch</th>
                        <th>Student Section</th>
                        <th>Timetable</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="display_timetables"></tbody>
            </table>
        </div>
    </div>
</div>


<%- include('../../layout/footer') %>
<script src="/admin/pages/manage-timetables/manage-timetables.js"></script>