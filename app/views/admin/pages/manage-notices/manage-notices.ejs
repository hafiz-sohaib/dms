<%- include('../../layout/header') %>


<style>

.ql-toolbar.ql-snow {
    border: 1px solid #dee2e6;
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
}
.ql-container{
    height: 300px;
    overflow-y: scroll;
}
.ql-container.ql-snow{
    border: 1px solid #dee2e6;
}

</style>    


<div class="card bg-light mb-5 shadow-sm">
    <div class="card-body">
        <form id="notice_form">
            <h5 class="mb-4">Upload Notice</h5>
            <div class="row mb-3">
                <div class="col-4">
                    <input type="text" name="notice_title" class="form-control" placeholder="Notice Title" />
                    <div class="text-danger" id="notice_title_error"></div>
                </div>
                <div class="col-4">
                    <select class="form-select" name="notice_roll">
                        <option value="for-students">For Students</option>
                        <option value="for-teachers">For Teachers</option>
                        <option value="for-everyone">For Everyone</option>
                    </select>
                    <div class="text-danger" id="notice_roll_error"></div>
                </div>
                <div class="col-4">
                    <select class="form-select" name="notice_periority">
                        <option value="High">High</option>
                        <option value="Normal">Normal</option>
                        <option value="Low">Low</option>
                    </select>
                    <div class="text-danger" id="notice_periority_error"></div>
                </div>
            </div>
            <div class="mb-4">
                <div id="editor"></div>
                <input type="hidden" name="notice_content" />
                <div class="text-danger" id="notice_content_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Upload Notice</button>
        </form>
    </div>
</div>


<div class="card bg-light shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Notices</h5>
            <input type="text" id="search_notice" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-students" type="button" role="tab" aria-controls="nav-students" aria-selected="true">For Students</button>
                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-teachers" type="button" role="tab" aria-controls="nav-teachers" aria-selected="false">For Teachers</button>
                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-everyone" type="button" role="tab" aria-controls="nav-everyone" aria-selected="false">For Everyone</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-students" role="tabpanel" aria-labelledby="nav-students-tab" tabindex="0">
                <div id="student_notices" class="py-4"></div>
            </div>
            <div class="tab-pane fade" id="nav-teachers" role="tabpanel" aria-labelledby="nav-teachers-tab" tabindex="0">
                <div id="teacher_notices" class="py-4"></div>
            </div>
            <div class="tab-pane fade" id="nav-everyone" role="tabpanel" aria-labelledby="nav-everyone-tab" tabindex="0">
                <div id="everyone_notices" class="py-4"></div>
            </div>
        </div>
    </div>
</div>


<%- include('../../layout/footer') %>
<script src="/admin/pages/manage-notices/manage-notices.js"></script>