<%- include('../../../layout/header') %>

<div class="card mb-5">
    <div class="card-body">
        <form id="exam_form">
            <h5 class="mb-4">Set Exam Duties</h5>
            <div class="mb-3">
                <input type="hidden" name="exam_id" />
                <select class="form-select" name="exam_teacher"></select>
                <div class="text-danger" id="exam_teacher_error"></div>
            </div>
            <div class="mb-3">
                <select class="form-select" name="exam_shift">
                    <option value="09:00am to 12:00pm">09:00am to 12:00pm</option>
                    <option value="12:00pm to 03:00pm">12:00pm to 03:00pm</option>
                </select>
                <div class="text-danger" id="exam_shift_error"></div>
            </div>
            <div class="mb-4">
                <select class="form-select" name="exam_room">
                    <option value="Room A">Room A</option>
                    <option value="Room B">Room B</option>
                    <option value="Room C">Room C</option>
                </select>
                <div class="text-danger" id="exam_room_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Set Duty</button>
        </form>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Exam Duties</h5>
            <input type="text" id="search_duties" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Teacher Name</th>
                        <th>Exam timing</th>
                        <th>Classroom</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="display_duties"></tbody>
            </table>
        </div>
    </div>
</div>


<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="success_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                <rect width="100%" height="100%" fill="#00695c"></rect>
            </svg>
            <strong class="me-auto">Message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>


<%- include('../../../layout/footer') %>
<script src="/pages/admin/manage-exam-duties/manage-exam-duties.js"></script>