<%- include('../../../layout/header') %>

<div class="card mb-5">
    <div class="card-body">
        <form id="user_form">
            <h5 class="mb-4">Create User Account</h5>
            <div class="mb-3">
                <input type="text" name="full_name" class="form-control" placeholder="Full Name" />
                <div class="text-danger" id="full_name_error"></div>
            </div>
            <div class="mb-3">
                <select name="email" class="form-select"></select>
                <div class="text-danger" id="email_error"></div>
            </div>
            <div class="mb-3">
                <select name="role" class="form-select">
                    <option value="짜student짜">Student</option>
                    <option value="짜teacher짜">Teacher</option>
                </select>
            </div>
            <div class="mb-4">
                <input type="text" name="password" class="form-control" placeholder="Create Password" />
                <div class="text-danger" id="password_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Users</h5>
            <input type="text" id="search_user" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-student-tab" data-bs-toggle="tab" data-bs-target="#nav-student" type="button" role="tab" aria-controls="nav-student" aria-selected="true">Students</button>
                <button class="nav-link" id="nav-teacher-tab" data-bs-toggle="tab" data-bs-target="#nav-teacher" type="button" role="tab" aria-controls="nav-teacher" aria-selected="false">Teachers</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-student" role="tabpanel" aria-labelledby="nav-student-tab" tabindex="0">
                <div class="table-responsive py-4">
                    <table class="table table-striped">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Roll</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider" id="display_students"></tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-teacher" role="tabpanel" aria-labelledby="nav-teacher-tab" tabindex="0">
                <div class="table-responsive py-4">
                    <table class="table table-striped">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Roll</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider" id="display_teachers"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="success_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                <rect width="100%" height="100%" fill="#00695c"></rect>
            </svg>
            <strong class="me-auto">Message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>


<%- include('../../../layout/footer') %>
