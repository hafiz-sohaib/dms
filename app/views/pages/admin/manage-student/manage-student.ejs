<%- include('../../../layout/header') %>

<div class="card mb-5 shadow-sm">
    <div class="card-body">
        <form id="student_form">
            <h5 class="mb-4">Add Student</h5>
            <div class="mb-3">
                <input type="hidden" name="student_id" />
                <input type="text" name="student_roll_number" class="form-control" placeholder="Student Roll Number" />
                <div class="text-danger" id="student_roll_number_error"></div>
            </div>
            <div class="mb-3">
                <input type="text" name="student_name" class="form-control" placeholder="Student Name" />
                <div class="text-danger" id="student_name_error"></div>
            </div>
            <div class="mb-3">
                <input type="text" name="student_email" class="form-control" placeholder="Student Email" />
                <div class="text-danger" id="student_email_error"></div>
            </div>
            <div class="mb-3">
                <input type="text" name="student_phone" class="form-control" placeholder="Student Phone" />
                <div class="text-danger" id="student_phone_error"></div>
            </div>
            <div class="mb-3">
                <input type="text" name="student_cnic" class="form-control" placeholder="Student CNIC#" />
                <div class="text-danger" id="student_cnic_error"></div>
            </div>
            <div class="mb-3">
                <input type="text" name="student_year" class="form-control" placeholder="Student Year" />
                <div class="text-danger" id="student_year_error"></div>
            </div>
            <div class="mb-4">
                <textarea rows="3" name="student_address" class="form-control" placeholder="Student Address"></textarea>
                <div class="text-danger" id="student_address_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Add Student</button>
        </form>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Students</h5>
            <input type="text" id="search_student" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Student Name</th>
                        <th>Student Email</th>
                        <th>Student Phone</th>
                        <th>Student CNIC</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="display_students"></tbody>
            </table>
        </div>
    </div>
</div>


<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="success_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
                <rect width="100%" height="100%" fill="#00695c"></rect>
            </svg>
            <strong class="me-auto">Message</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body"></div>
    </div>
</div>


<%- include('../../../layout/footer') %>
<script src="/pages/admin/manage-student/manage-student.js"></script>