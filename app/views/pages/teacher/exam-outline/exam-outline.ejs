<%- include('../../../layout/header') %>

<style>

.ql-toolbar.ql-snow {
    border: 1px solid #dee2e6;
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
}
.ql-container{
    height: 300px;
    overflow-y: scroll;
}
.ql-container.ql-snow{
    border: 1px solid #dee2e6;
}

</style>


<div class="card mb-5">
    <div class="card-body">
        <form id="notification_form">
            <h5 class="mb-4">Send Notification</h5>
            <div class="mb-3">
                <input type="text" name="notification_title" class="form-control" placeholder="Notification Title" />
                <div class="text-danger" id="notification_title_error"></div>
            </div>
            <div class="mb-3">
                <select class="form-select" name="notification_batch_year"></select>
                <div class="text-danger" id="notification_batch_year_error"></div>
            </div>
            <div class="mb-4">
                <div id="editor"></div>
                <input type="hidden" name="notification_content" />
                <div class="text-danger" id="notification_content_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Send Notification</button>
        </form>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Notification</h5>
            <input type="text" id="search_notification" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>
        <div id="display_notifications" class="py-4"></div>
    </div>
</div>



<%- include('../../../layout/footer') %>
<script src="/assets/teacher/js/script.js"></script>
