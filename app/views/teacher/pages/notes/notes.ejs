<%- include('../../layout/header') %>

<style>

.ql-toolbar.ql-snow {
    border: 1px solid #dee2e6;
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
}
.ql-container{
    height: 300px;
    overflow-y: scroll;
}
.ql-container.ql-snow{
    border: 1px solid #dee2e6;
}

</style>


<div class="card mb-5">
    <div class="card-body">
        <form id="notes_form">
            <h5 class="mb-4">Upload Notes</h5>
            <div class="row mb-3">
                <div class="col-4">
                    <input type="text" name="notes_title" class="form-control" placeholder="Notes Title" />
                    <div class="text-danger" id="notes_title_error"></div>
                </div>
                <div class="col-4">
                    <input type="file" name="notes_file" class="form-control" />
                    <div class="text-danger" id="notes_file_error"></div>
                </div>
                <div class="col-4">
                    <select class="form-select" name="notes_batch_year"></select>
                    <div class="text-danger" id="notes_batch_year_error"></div>
                </div>
            </div>
            <div class="mb-4">
                <div id="editor"></div>
                <input type="hidden" name="notes_content" />
                <div class="text-danger" id="notes_content_error"></div>
            </div>
            <button type="submit" class="btn btn-primary">Upload Notes</button>
        </form>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h5 class="card-title">Show Notes</h5>
            <input type="text" id="search_notes" class="form-control" style="width: 300px;" placeholder="Search..." />
        </div>
        <div id="display_notes" class="py-4"></div>
    </div>
</div>


<%- include('../../layout/footer') %>
<script src="/teacher/pages/notes/notes.js"></script>